# --- Optional Bearer auth (default OFF) ---
# Protect Memory/Vector HTTP endpoints with a single token.
# Health/canary/metrics remain open so orchestrators can probe.
# Enable by setting AXIOM_AUTH_ENABLED=true and supplying a strong token.
AXIOM_AUTH_ENABLED=false
# AXIOM_AUTH_TOKEN=

# Correlation IDs
# Header name for correlation IDs; default X-Request-ID
AXIOM_REQUEST_ID_HEADER=X-Request-ID

# Common environment variables (safe defaults)
# Copy to .env and edit as needed

# Memory API
MEMORY_API_PORT=8002

# Vector path resolution
# Options: qdrant (default) | adapter
VECTOR_PATH=qdrant

# Qdrant connection (leave blank to use QDRANT_HOST/QDRANT_PORT or local defaults)
# Example for remote instance: http://your-qdrant-host:6333 or http://<host>:8011 (if port-mapped)
QDRANT_URL=

# Startup canaries (vector self-checks); set to false to disable
AXIOM_CANARIES=true

# Journal â†’ Vector upsert (optional; disabled by default)
JOURNAL_VECTOR_ENABLED=false

# Vector Adapter legacy v1 writes (disabled by default). Enable only if needed.
ADAPTER_ENABLE_V1_WRITES=false

# Composite scoring in retrieval (optional enhancement)
AXIOM_COMPOSITE_SCORING=false

# --- Discord/LLM Pod Env ---

# --- LLM routing (choose one provider path) ---
# LLM_PROVIDER=openai_compatible
# LLM_API_BASE=http://localhost:8000/v1   # OpenAI-compatible endpoint base
# LLM_MODEL_ID=Llama-3.3-70B-Instruct     # Your deployed model id

# If (and only if) you use Ollama:
# LLM_PROVIDER=ollama
# OLLAMA_URL=http://localhost:11434
# LLM_MODEL_ID=llama3.2:1b

# First-party OpenAI fallback:
# OPENAI_API_KEY=__your_openai_key__
# OPENAI_BASE_URL=https://api.openai.com

# Memory API (either name is accepted)
MEMORY_POD_URL=http://localhost:8002
# MEMORY_API_URL=http://localhost:5000

# Optional timeouts
# LLM_HTTP_TIMEOUT=600
# LLM_RETRIES=3

# Mark pod role to guard Qdrant writes from this pod
# AXIOM_POD_ROLE=discord
# DISCORD_BOT=true

# Discord
DISCORD_TOKEN=__your_token__

# Vectors (pick ONE style)
# Cloud:
USE_QDRANT_BACKEND=true
QDRANT_URL=https://YOUR-CLOUD-INSTANCE.eu-west-2.aws.cloud.qdrant.io
QDRANT_USE_HTTPS=true
QDRANT_API_KEY=__your_key__

# OR Self-hosted:
# USE_QDRANT_BACKEND=true
# QDRANT_HOST=your-qdrant-host
# QDRANT_PORT=6333
# QDRANT_USE_HTTPS=false

# Embeddings
USE_LOCAL_EMBEDDINGS=false
# ST_MODEL=sentence-transformers/all-MiniLM-L6-v2

